# Application Settings
APP_NAME=Workforce Wellbeing Analytics
DEBUG=False
API_VERSION=v1

# Server
HOST=0.0.0.0
PORT=8000
BASE_URL=http://localhost:8000  # IMPORTANT: Set to https://your-app.onrender.com in production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/wellbeing_db

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Microsoft Graph OAuth2
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
# MICROSOFT_REDIRECT_URI is auto-generated from BASE_URL if not set

# Slack OAuth2
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
# SLACK_REDIRECT_URI is auto-generated from BASE_URL if not set

# Jira OAuth2
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret
# JIRA_REDIRECT_URI is auto-generated from BASE_URL if not set
JIRA_CLOUD_ID=your-jira-cloud-id

# Asana OAuth2
ASANA_CLIENT_ID=your-asana-client-id
ASANA_CLIENT_SECRET=your-asana-client-secret
# ASANA_REDIRECT_URI is auto-generated from BASE_URL if not set

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
# GITHUB_REDIRECT_URI is auto-generated from BASE_URL if not set
GITHUB_SCOPES=repo,read:user,user:email,read:org

# Google Sheets OAuth2 (MANDATORY - for attendance tracking)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI is auto-generated from BASE_URL if not set
GOOGLE_SCOPES=https://www.googleapis.com/auth/spreadsheets,https://www.googleapis.com/auth/drive.file
GOOGLE_ATTENDANCE_SPREADSHEET_ID=your-spreadsheet-id

# CloudABIS Biometric Authentication
CLOUDABIS_APP_KEY=your-cloudabis-app-key
CLOUDABIS_SECRET_KEY=your-cloudabis-secret-key
CLOUDABIS_CUSTOMER_KEY=your-cloudabis-customer-key
CLOUDABIS_BASE_URL=https://cloud.m2sys.com/CloudABIS/api
CLOUDABIS_ENGINE_NAME=FACE

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Extraction
ANALYSIS_DAYS_BACK=14
WORKING_HOURS_START=9
WORKING_HOURS_END=18

# Privacy
ANONYMIZE_DATA=true
HASH_ALGORITHM=sha256

# ============================================
# EMAIL SERVICE CONFIGURATION
# ============================================

# SMTP Server Settings
# For Gmail: smtp.gmail.com, port 587
# For Office 365: smtp.office365.com, port 587
# For SendGrid: smtp.sendgrid.net, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Company Email Account Credentials
# Use a dedicated company email address for sending HR/wellbeing alerts
# Examples: hr-wellbeing@yourcompany.com, employee-wellness@yourcompany.com
SMTP_USER=hr-wellbeing@yourcompany.com
SMTP_PASSWORD=your-secure-app-password

# Email Sender Information (appears as "From" in emails)
FROM_EMAIL=hr-wellbeing@yourcompany.com
FROM_NAME=HR Wellbeing Team

# ============================================
# EMAIL PROVIDER SETUP GUIDES
# ============================================

# GMAIL SETUP:
# 1. Create dedicated Gmail: hr-wellbeing@yourcompany.com
# 2. Enable 2-Factor Authentication
# 3. Generate App Password: https://myaccount.google.com/apppasswords
# 4. Use app password in SMTP_PASSWORD

# OFFICE 365 SETUP:
# SMTP_HOST=smtp.office365.com
# SMTP_USER=hr-wellbeing@yourcompany.com
# SMTP_PASSWORD=your-office365-password

# SENDGRID (Recommended for Production):
# SMTP_HOST=smtp.sendgrid.net
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# AWS SES (Enterprise):
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_USER=your-aws-smtp-username
# SMTP_PASSWORD=your-aws-smtp-password
